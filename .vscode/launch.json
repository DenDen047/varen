{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "module": "varen.code.train_utils.main",
            "args": [
                "--name",
                "varen_redo",
                "--num_epochs",
                "100",
                "--gpu_id",
                "-1"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Predict",
            "type": "debugpy",
            "request": "launch",
            "module": "varen.code.horse_model.predict",
            "args": [
                "--name",
                "varen",
                "--gpu_id",
                "-1"
            ],
            "console": "integratedTerminal"
        }
    ]
}